<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="12dp">


        <RelativeLayout
            android:id="@+id/mainListGroupIconLayout"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true">

            <LinearLayout
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:weightSum="2">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <RelativeLayout
                    android:id="@+id/mainListGroupBottomIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:visibility="invisible" />
            </LinearLayout>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:background="@drawable/circle"
                android:padding="2dp"
                android:src="@drawable/ic_main_folder" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/mainListGroupIconLayout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mainListGroupTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="채소 및 육류"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/mainListGroupContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="채소 및 육류"
                android:textColor="@color/commonTextColor"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>
</layout>